<Window x:Class="IncomUtility.APP.APP_UI_SensorData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncomUtility.APP"
        mc:Ignorable="d"
        Title="Program Sensor Data" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Button x:Name="tBtn_WriteSensorData" Content="Write Sensor Data to Device" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" Width="130" Height="40" MinHeight="30" MinWidth="170" Click="tBtn_WriteSensorData_Click"/>
        <Button x:Name="tBtn_ReadSensorData" Content="Read Sensor Data from Device" HorizontalAlignment="Left" Margin="190,24,0,0" VerticalAlignment="Top" Width="170" Height="40" Click="tBtn_ReadSensorData_Click"/>
        <ProgressBar x:Name="tPbar_DataDownBar" HorizontalAlignment="Left" Height="30"  BorderBrush="Black" Margin="10,75,0,0" VerticalAlignment="Top" Width="300" MinHeight="30" MinWidth="350"/>
        <TextBox x:Name="tTxt_Logs" Grid.Row="1" Margin="10"/>

    </Grid>
</Window>
