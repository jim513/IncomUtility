<Window x:Class="IncomUtility.APP.APP_UI_InstrumentSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncomUtility.APP"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Instrument Settings" Height="1200" Width="1300" >
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190*"/>
                <ColumnDefinition Width="170*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="170*"/>

            </Grid.ColumnDefinitions>
            <StackPanel   >
                <GroupBox Header="0x09 Device Information" Margin="10,10,5,8.6" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Device Serial Number" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <Label Content="Board Serial Number" Grid.Row ="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBox x:Name="tTxt_DeviceSerialNumber" Grid.Column="1" Margin="0,2" Text="Incom_pcb_01" SpellCheck.IsEnabled="True" VerticalAlignment="Center" />
                        <TextBox x:Name="tTxt_BoardSerialNumber" Grid.Column="1" Grid.Row="1" Margin="0,2" Text="Incom_pcb_01" VerticalAlignment="Center"/>
                        <Button x:Name="tBtn_ReadDeviceInfo"  Content="Read Device Info" Grid.Row="2"   Height="20" Margin="5" VerticalContentAlignment="Bottom" Click="tBtn_ReadDeviceInfo_Click"   />
                        <Button x:Name="tBtn_WriteDeviceInfo"  Content="Write Device Info" Grid.Row="2" Grid.Column="1"   Height="20" Margin="5" Click="tBtn_WriteDeviceInfo_Click" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="0x02 Relay Options" Margin="10,3.4,2,3" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="65*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="66*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Trigger Event1"  />
                        <Label Content="Trigger Event2" Grid.Row="1" />
                        <Label Grid.Row="2" Content="Initial State1"  />
                        <Label Grid.Row="3" Content="Initial State2"/>
                        <Label Grid.Row="4" Content="OnDelay Time"  />
                        <Button x:Name="tBtn_ReadRelay" Grid.Row="5" Content="Read Realy"   Margin="5" Grid.ColumnSpan="2" Click="tBtn_ReadRelay_Click"   />
                        <ComboBox x:Name="tCmb_TriggerEvent1" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,2" SelectedIndex="0" >
                            <ComboBoxItem Content="0 : Fault" />
                            <ComboBoxItem Content="1 : Alarm 1" />
                            <ComboBoxItem Content="2 : Alarm 2"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_TriggerEvent2" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,2" SelectedIndex="1">
                            <ComboBoxItem Content="0 : Fault" />
                            <ComboBoxItem Content="1 : Alarm 1" />
                            <ComboBoxItem Content="2 : Alarm 2"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_InitialState1" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="0,2" SelectedIndex="0">
                            <ComboBoxItem Content="0 : De-Energised (ND)"/>
                            <ComboBoxItem Content="1 : Energised (NE)"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_InitialState2" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" Margin="0,2" SelectedIndex="1">
                            <ComboBoxItem Content="0 : De-Energised (ND)"/>
                            <ComboBoxItem Content="1 : Energised (NE)"/>
                        </ComboBox>
                        <xctk:DecimalUpDown x:Name="tUpdown_OnDelayTime" Grid.Row="4" Grid.Column="1" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                        <Label Content="OffDelay Time" Grid.Row="4" Grid.Column="2" />
                        <xctk:DecimalUpDown x:Name="tUpdown_OffDelayTime" Grid.Row="4" Grid.Column="3" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                        <Button x:Name="tBtn_WriteRelay" Content="Write Relay" Grid.Row="5" Grid.Column="2"   Margin="5" Grid.ColumnSpan="2" Click="tBtn_WriteRelay_Click"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="0x06 Calibartion" Margin="5,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Calibration Interval"/>
                        <Label Content="Calibration Conc" Grid.Row="1"/>
                        <Label Content="Last Cal.Date" Grid.Row="2"/>
                        <Label Content="Days Passed since last cal." Grid.Row="3"/>
                        <CheckBox x:Name="tChb_UpdateCal" Content="Update Cal date Elapsed Cal Days" Grid.Row="4" Margin="5" Grid.ColumnSpan="2"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_CalInterval" Value="180" Grid.Column="1" Margin="0,2" TextAlignment="Left"/>
                        <xctk:DoubleUpDown x:Name="tUpdown_CalCon" Value="1.0" Grid.Row="1" Grid.Column="1" Increment="0.1" FormatString="N1" Margin="0,2" TextAlignment="Left"/>
                        <DatePicker x:Name="tDate_LastCalDate" SelectedDate="2016/06/21" Grid.Row="2" Grid.Column="1" Margin="0,2"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_DayPassed" Value="0" Grid.Row="3" Grid.Column="1" Margin="0,2" TextAlignment="Left"/>
                        <Button x:Name="tBtn_ReadCal" Content="Read Cal Param" Grid.Row="5"   Height="20" Margin="5" Click="tBtn_ReadCal_Click"  />
                        <Button x:Name="tBtn_WriteCal" Content="Write Cal Param" Grid.Row="5"   Height="20" Margin="5" Grid.Column="1" Click="tBtn_WriteCal_Click"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="0x03 mA Output Setting" Margin="10,4,5,7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Fault Current (mA)" />
                        <Label Content="Warning Current (mA)" Grid.Row="1" />
                        <Label  Content="Over-range Current (mA)" Grid.Row="2" />
                        <Label Content="Inhibit Current (mA)" Grid.Row="3"  />
                        <Label Content="Inhibit Timeout (mins)" Grid.Row="4" />
                        <xctk:DoubleUpDown x:Name="tUpdown_FaultCurrent" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N1" Margin="0,2" HorizontalContentAlignment="Center" TextAlignment="Left"/>
                        <xctk:DoubleUpDown x:Name="tUpdown_WarningCurrent" Grid.Column="1" Value="3.0" Increment="0.1" FormatString="N1" Grid.Row="1" Margin="0,2" TextAlignment="Left"/>
                        <xctk:DoubleUpDown x:Name="tUpdown_OverRangeCurrent" Grid.Column="1" Value="21.0" Increment="0.1" FormatString="N1" Grid.Row="2" Margin="0,2" TextAlignment="Left" />
                        <xctk:DoubleUpDown x:Name="tUpdown_InhibitCurrent" Grid.Column="1" Value="21.0" Increment="0.1" FormatString="N1" Grid.Row="3" IsReadOnly="True" Background="LightGray" Margin="0,2" TextAlignment="Left"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_InhibitTimeout" Grid.Column="1" Value="15" Grid.Row="4" Margin="0,2,0,0" TextAlignment="Left" />
                        <Button x:Name="tBtn_ReadmAOutput" Content="Read mA Output" Grid.Row="5"   Height="20" Margin="5" Click="tBtn_ReadmAOutput_Click" />
                        <Button x:Name="tBtn_WritemAOutput" Content="Write mA Output" Grid.Row="5"   Height="20" Margin="5" Grid.Column="1" Click="tBtn_WritemAOutput_Click"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <GroupBox Header="0x04 General" Margin="5,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Location Tag"  />
                        <Label Content="LED Control" Grid.Row="1" />
                        <Label Grid.Row="2" Content="Alarm Operation mode"  />
                        <Label Grid.Row="3" Content="Safety mode"/>
                        <Label Grid.Row="4" Content="Cal Over due indication"  />
                        <Label Grid.Row="5" Content="Passcode"/>
                        <Button x:Name="tBtn_ReadGeneral" Grid.Row="6" Height="20" Content="Read General"   Margin="5" Click="tBtn_ReadGeneral_Click"   />
                        <Button x:Name="tBtn_WriteGeneral" Content="Write Genral" Grid.Row="6" Grid.Column="1"   Margin="5" Grid.ColumnSpan="4" VerticalAlignment="Center" Click="tBtn_WriteGeneral_Click"/>
                        <TextBox x:Name="tTxt_LocationTag" Text="Incom_loc_01" Grid.Column="1" Grid.ColumnSpan="4" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                        <ComboBox x:Name="tCmb_LEDControl" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,2" SelectedIndex="1" >
                            <ComboBoxItem Content="0 : Normal Off" />
                            <ComboBoxItem Content="1 : Normal Flash" />
                            <ComboBoxItem Content="2 : Normal On"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_AlarmOperationMode" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Margin="0,2" SelectedIndex="0">
                            <ComboBoxItem Content="0 : Normal" />
                            <ComboBoxItem Content="1 : UL2075" />
                        </ComboBox>
                        <ComboBox x:Name="tCmb_SafetyMode" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Margin="0,2" SelectedIndex="0">
                            <ComboBoxItem Content="0 : Normal mode"/>
                            <ComboBoxItem Content="1 : ATEX mode"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_CalOverdue" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4" Margin="0,2" SelectedIndex="0">
                            <ComboBoxItem Content="0 : Off (ignore)"/>
                            <ComboBoxItem Content="1 : Treat as warning"/>
                            <ComboBoxItem Content="2 : Treat as Fault"/>
                        </ComboBox>
                        <xctk:DecimalUpDown x:Name="tUpdown_Passcode1" Grid.Row="5" Grid.Column="1" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_Passcode2" Grid.Row="5" Grid.Column="2" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_Passcode3" Grid.Row="5" Grid.Column="3" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                        <xctk:DecimalUpDown x:Name="tUpdown_Passcode4" Grid.Row="5" Grid.Column="4" Margin="0,2" DefaultValue="0" DisplayDefaultValueOnEmptyText="True" TextAlignment="Left"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="0x01 Modbus" Margin="5,4,5,10" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Label Content="Slave ID" />
                        <Label Content="Baudrate" Grid.Row="1" />
                        <Label Content="Parity" Grid.Row="2" />
                        <Label Content="Flow Control" Grid.Row="3"  />
                        <Label Content="Databits" Grid.Row="4" />
                        <Label Content="Stopbits" Grid.Row="5" />
                        <xctk:DecimalUpDown x:Name="tUpdown_SlaveID" Grid.Column="1" Value="1" Margin="0,2" TextAlignment="Left"/>
                        <ComboBox x:Name="tCmb_Baudrate" SelectedIndex="0"  Grid.Row="1" Grid.Column="1" Margin="0,2">
                            <ComboBoxItem Content="9600 bps"/>
                            <ComboBoxItem Content="19200 bps"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_Parity" SelectedIndex="2"  Grid.Row="2" Grid.Column="1" Margin="0,2">
                            <ComboBoxItem Content="0 : None"/>
                            <ComboBoxItem Content="1 : Odd"/>
                            <ComboBoxItem Content="2 : Even"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_FlowControl" Grid.Row="3" Grid.Column="1" SelectedIndex="0" IsEnabled="False" Foreground="Gray">
                            <ComboBoxItem Content="0 : None"/>
                            <ComboBoxItem Content="1 : RTS/CTS"/>
                            <ComboBoxItem Content="2 : DTR/DSR" />
                            <ComboBoxItem Content="3 : RS485 -rts"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_Databits" Grid.Row="4" Grid.Column="1" SelectedIndex="0" IsEnabled="False" Foreground="Gray">
                            <ComboBoxItem Content="0 : 8bit"/>
                            <ComboBoxItem Content="1 : 7bit"/>
                            <ComboBoxItem Content="2 : 6bit"/>
                            <ComboBoxItem Content="3 : 5bit"/>
                        </ComboBox>
                        <ComboBox x:Name="tCmb_Stopbits" Grid.Row="5" Grid.Column="1" SelectedIndex="0" IsEnabled="False" Foreground="Gray">
                            <ComboBoxItem Content="0 : 1bit"/>
                            <ComboBoxItem Content="1 : 2bits"/>
                        </ComboBox>
                        <Button x:Name="tBtn_ReadModbus" Content="Read Modbus" Grid.Row="6"   Height="20" Margin="5" Click="tBtn_ReadModbus_Click"  />
                        <Button x:Name="tBtn_WriteModbus" Content="Write Modbus" Grid.Row="6"   Height="20" Margin="5" Grid.Column="1" Click="tBtn_WriteModbus_Click"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="0x08 Circuit Calibration" Height="auto" Margin="5,10,5,7">
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="4to20mA offset - sink" />
                            <Label Content="4to20mA span - sink" Grid.Row="1" />
                            <Label Content="4to20mA offset - source" Grid.Row="2" />
                            <Label Content="4to20mA span - source" Grid.Row="3"  />
                            <Label Content="Loopback offset - sink" Grid.Row="4" />
                            <Label Content="Loopback span - sink" Grid.Row="5" />
                            <Label Content="Loopback offset - source" Grid.Row="6" />
                            <Label Content="Loopback span - source" Grid.Row="7" />
                            <Label Content="Voltage out offset" Grid.Row="8" />
                            <Label Content="Voltage out span" Grid.Row="9" />
                            <xctk:DoubleUpDown x:Name="tUpdown_4to20mAOffsetSink" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_4to20mASpanSink" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="1" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_4to20mAOffsetSource"  Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="2" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_4to20mASpanSource"  Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="3" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_LoopbakcOffsetSink" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="4" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_LoopbackSpanSink" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="5" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_LoopbackOffsetSource" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="6" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_LoopbackSpanSource" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="7" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_VoltageOutputOffset" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="8" TextAlignment="Left"/>
                            <xctk:DoubleUpDown x:Name="tUpdown_VoltageOutputSpan" Grid.Column="1" Value="1.0" Increment="0.1" FormatString="N3" Margin="0,2" Grid.Row="9" TextAlignment="Left"/>
                            <Button x:Name="tBtn_ReadCircuitCal" Content="Read Circuit Cal" Grid.Row="10"   Height="20" Margin="5" Click="tBtn_ReadCircuitCal_Click" />
                            <Button x:Name="tBtn_WriteCircuiotCal" Content="Write Circuit Cal" Grid.Row="10"   Height="20" Margin="5" Grid.RowSpan="2" Grid.Column="1" Click="tBtn_WriteCircuiotCal_Click"/>
                        </Grid>
                    </Grid>
                </GroupBox>

            </StackPanel>

            <StackPanel Grid.Column="2">
                <GroupBox Header="0x0B NTC Compensation" Margin="10">
                    <Grid x:Name="tGrid_NTCCompensation">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="0*"/>
                        </Grid.RowDefinitions>
                        <Label Content="NTC Comp (-40oC)" />
                        <Label Content="NTC Comp (-30oC)" Grid.Row="1" />
                        <Label Content="NTC Comp (-20oC)" Grid.Row="2" />
                        <Label Content="NTC Comp (-10oC)" Grid.Row="3" />
                        <Label Content="NTC Comp (-0oC)" Grid.Row="4" />
                        <Label Content="NTC Comp (10oC)" Grid.Row="5" />

                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp1" Value="-25" Grid.Column="1" Height="26" Margin="0,0,0.2,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp2" Value="-25" Grid.Column="1" Grid.Row="1"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp3" Value="-20" Grid.Column="1" Grid.Row="2"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp4" Value="-12" Grid.Column="1" Grid.Row="3"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp5" Value="-8" Grid.Column="1" Grid.Row="4"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp6" Value="-6" Grid.Column="1" Grid.Row="5"/>

                        <Label Content="NTC Comp (20oC)" Grid.Column="2" />
                        <Label Content="NTC Comp (30oC)" Grid.Column="2" Grid.Row="1"/>
                        <Label Content="NTC Comp (40oC)" Grid.Column="2" Grid.Row="2"/>
                        <Label Content="NTC Comp (50oC)" Grid.Column="2" Grid.Row="3"/>
                        <Label Content="NTC Comp (60oC)" Grid.Column="2" Grid.Row="4"/>
                        <Label Content="NTC Comp (70oC)" Grid.Column="2" Grid.Row="5"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp7" Value="-5" Grid.Column="3"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp8" Value="-5" Grid.Column="3" Grid.Row="1"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp9" Value="-5" Grid.Column="3" Grid.Row="2"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp10" Value="-5" Grid.Column="3" Grid.Row="3"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp11" Value="-5" Grid.Column="3" Grid.Row="4"/>
                        <xctk:IntegerUpDown x:Name="tUpdown_NTCComp12" Value="-5" Grid.Column="3" Grid.Row="5"/>

                        <Button x:Name="tBtn_ReadNTC" Content="Read NTC" Margin="5" Grid.Row="6" Grid.ColumnSpan="2" Click="tBtn_ReadNTC_Click"/>
                        <Button x:Name="tBtn_WriteNTC" Content="Write NTC" Margin="5" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="6" Click="tBtn_WriteNTC_Click"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="0x0C UL 2075 Histogram" Margin="5,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="0*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Count (10ppm)" />
                        <Label Content="Count (20ppm)" Grid.Row="1" />
                        <Label Content="Count (30ppm)" Grid.Row="2" />
                        <Label Content="Count (40ppm)" Grid.Row="3" />
                        <Label Content="Count (50ppm)" Grid.Row="4" />
                        <Label Content="Count (60ppm)" Grid.Row="5" />
                        <Label Content="Count (70ppm)" Grid.Row="6" />
                        <Label Content="Count (80ppm)" Grid.Row="7" />
                        <Label Content="Count (90ppm)" Grid.Row="8" />
                        <Label Content="Count (100ppm)" Grid.Row="9" />
                        <Label Content="Count (110ppm)" Grid.Row="10" />
                        <Label Content="Count (120ppm)" Grid.Row="11" />
                        <Label Content="Count (130ppm)" Grid.Row="12"/>
                        <Label Content="Count (140ppm)" Grid.Row="13"/>
                        <Label Content="Count (150ppm)" Grid.Row="14"/>
                        <Label Content="Count (160ppm)" Grid.Row="15"/>
                        <Label Content="Count (170ppm)" Grid.Row="16"/>
                        <Label Content="Count (180ppm)" Grid.Row="17"/>
