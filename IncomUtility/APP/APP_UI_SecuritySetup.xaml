<Window xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"  x:Class="IncomUtility.APP.APP_UI_SecuritySetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IncomUtility.APP"
        mc:Ignorable="d"
        Title="APP_UI_SecuritySetup" Height="550" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="341*"/>
            <ColumnDefinition Width="302*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="User Cert" Margin="10,10,7.8,9.6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="User Name" Margin="10,2" />
                <TextBox x:Name="tTxt_UserCertName" Text="&quot;{User Name}&quot;" Grid.Row="1" Margin="10,2" VerticalContentAlignment="Center"/>
                <Label Content="Expiration Date" Grid.Row="2" Margin="10,2" />
                <xctk:DecimalUpDown x:Name="tUpdown_ExpirationDate" Value="30" Grid.Row="3" TextAlignment="Left" Margin="10,2"/>
                <Button x:Name="tBtn_CheckUserCerInfo" Content="Check User Cert Info" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="10,2" Click="tBtn_CheckUserCerInfo_Click"/>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Margin="10,10.4,7.8,10.2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="tBtn_ReadCryptCISN" Margin="10,20" Content="Read Crypt CI SN" Click="tBtn_ReadCryptCISN_Click"/>
            <Button x:Name="tBtn_RequestDeviceCertInfo" Grid.Column="1" Margin="10,20" Content="Request Device Cert Info" Click="tBtn_RequestDeviceCertInfo_Click"/>
            <Button x:Name="tBtn_CreateKeyPair" Grid.Row="1" Margin="10,20" Content="Create Key Pair" Click="tBtn_CreateKeyPair_Click" />
            <Button x:Name="tBtn_GetDevicePublicKey" Grid.Row="1" Grid.Column="1" Margin="10,20" Content="Get Device Public Key" Click="tBtn_GetDevicePublicKey_Click"/>
        </Grid>
        <GroupBox Header="User Certificate" Grid.Column="1" Margin="12.2,10,10.2,9.6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="User Name"/>
                <Label Content="Mobile SN (IMEI)" Grid.Row="1"/>
                <Label Content="Application ID" Grid.Row="2"/>
                <TextBox x:Name="tTxt_UserCertficateName" Grid.Column="1" Margin="2"/>
                <TextBox x:Name="tTxt_MobileSN" Grid.Column="1" Margin="2" Grid.Row="1"/>
                <TextBox x:Name="tTxt_ApplicationID" Grid.Column="1" Margin="2" Grid.Row="2"/>
                <Button x:Name="tBtn_SendUserCertificate" Content="Send User Certificate" Grid.Column="1" Grid.Row="3" Margin="10,2" Click="tBtn_SendUserCertificate_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Device / CA certificate" Margin="11.2,10.4,10.2,10.2" Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="71*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="tCmb_CertificateType"  Grid.ColumnSpan="2"  SelectedIndex="0" Margin="10" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Device Certificate"/>
                    <ComboBoxItem Content="CA Certificate"/>
                </ComboBox>
                <Button x:Name="tBtn_TransferCertificate" Content="Transter Certificate" Grid.Row="1" Margin="10" Click="tBtn_TransferCertificate_Click" />
                <Button x:Name="tBtn_VerifyCertificate" Content="Verify Certificate" Grid.Row="1" Margin="10" Grid.Column="1" Click="tBtn_VerifyCertificate_Click" />
            </Grid>
        </GroupBox>
        <TextBox x:Name="tTxt_Logs" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,9.8,10.2,9.8" TextWrapping="Wrap" Text="memo1"/>
    </Grid>
</Window>
